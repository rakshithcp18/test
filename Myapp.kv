MDScreen:
    md_bg_color : [35/255,59/255,54/255,1]
    MDCard:
        size_hint: None, None
        size:300,400
        pos_hint:{"center_x":0.5,"center_y":0.5}
        elevation:5
        md_bg_color:[35/255,59/255,54/255,1]
        padding:20
        spacing:30
        orientation:"vertical"

        # Adding the items to the card 

        MDLabel:
            text : "Login"
            font_style:"Button"
            font_size:30
            halign:"center"
            size_hint_y:None
            height:self.texture_size[1]
            padding_y:15
        MDTextFieldRound:
            hint_text:"username"
            icon_right:"account"
            size_hint_x:None
            width:220
            font_size:20
            pos_hint:{"center_x":0.5}
            color_active:[1,1,1,1]
        MDTextFieldRound:
            hint_text:"password"
            icon_right:"eye-off"
            size_hint_x:None
            width:220
            font_size:20
            pos_hint:{"center_x":0.5}
            color_active:[1,1,1,1]
            password: True
        MDRoundFlatButton:
            text:"Sign-up"
            pos_hint:{"center_x":0.5}
            font_size:15
        Widget:
            size_hint_x:None
            height:30



